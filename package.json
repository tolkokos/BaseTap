{
  "name": "basetap",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "deploy:proxy:sepolia": "hardhat run --network sepolia scripts/deploy-transparent.ts",
    "deploy:proxy:base": "hardhat run --network base scripts/deploy-transparent.ts",
    "deploy:proxy:base-sepolia": "hardhat run --network baseSepolia scripts/deploy-transparent.ts",
    "upgrade": "hardhat run scripts/upgrade.ts",
    "verify:impl": "hardhat run scripts/verify-impl.ts",
    "preupgrade": "hardhat run scripts/check-upgrade.ts",
    "read:proxy": "hardhat run scripts/read-proxy-info.ts",
    "set:token": "hardhat run scripts/set-token.ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "hardhat": "^2.22.7",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "viem": "^2.9.0",
    "@wagmi/core": "^2.6.0",
    "@coinbase/onchainkit": "^1.1.0"
  }
}
