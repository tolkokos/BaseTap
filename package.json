{
  "name": "basetap",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "description": "Instant onchain payment protocol for Base ecosystem with Base Pay and Account SDK integration",
  "keywords": [
    "base",
    "base-network",
    "ethereum",
    "l2",
    "coinbase",
    "onchainkit",
    "base-pay",
    "smart-contracts",
    "defi",
    "payments",
    "upgradeable"
  ],
  "scripts": {
    "build": "hardhat compile",
    "deploy:proxy:sepolia": "hardhat run --network sepolia scripts/deploy-transparent.ts",
    "deploy:proxy:base": "hardhat run --network base scripts/deploy-transparent.ts",
    "deploy:proxy:base-sepolia": "hardhat run --network baseSepolia scripts/deploy-transparent.ts",
    "upgrade": "hardhat run scripts/upgrade.ts",
    "verify:impl": "hardhat run scripts/verify-impl.ts",
    "preupgrade": "hardhat run scripts/check-upgrade.ts",
    "read:proxy": "hardhat run scripts/read-proxy-info.ts",
    "set:token": "hardhat run scripts/set-token.ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.7",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "chai": "^6.2.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "hardhat": "^2.22.7",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.3",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@coinbase/onchainkit": "^1.1.0",
    "@wagmi/core": "^2.6.0",
    "viem": "^2.9.0"
  }
}
